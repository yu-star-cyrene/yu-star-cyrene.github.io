
body {
    margin: 0;
    padding: 0;
    display: flex;
    background: url('/images/home-bg.jpg') center/cover fixed;
    color: #fff;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto;
}

/* 左侧栏 - 加深颜色 */
.sidebar {
    width: 280px;
    padding: 20px;
    background: rgba(0, 0, 0, 0.75);
    height: 100vh;
    overflow-y: auto;
    position: fixed;
    box-shadow: 2px 0 10px rgba(0, 0, 0, 0.3);
}

.avatar {
    width: 65px;
    height: 65px;
    border-radius: 50%;
    margin-bottom: 10px;
}

.site-title {
    margin: 5px 0 20px;
    font-size: 22px;
    font-weight: bold;
    color: #fff;
}

.nav a {
    margin-right: 10px;
    color: #eee;
    text-decoration: none;
    transition: color 0.3s;
}

.nav a:hover {
    color: #ffb7f5;
}

/* 文章列表 */
.post-item {
    margin-top: 20px;
    cursor: pointer;
    padding: 10px;
    border-radius: 5px;
    transition: background-color 0.3s;
}

.post-item:hover {
    background-color: rgba(255, 255, 255, 0.1);
}

.post-item h2 {
    margin: 0;
    font-size: 20px;
    color: #fff;
}

.post-item:hover h2 {
    color: #ffb7f5;
}

.post-item .date {
    color: #ccc;
}

/* 右侧内容区 */
.content-area {
    margin-left: 300px;
    padding: 40px;
    width: calc(100% - 300px);
    min-height: 100vh;
}

.content-wrapper {
    background: rgba(255, 255, 255, 0.9); /* 改为白色半透明背景 */
    border-radius: 10px;
    padding: 30px;
    min-height: calc(100vh - 80px);
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
}

.hint {
    font-size: 18px;
    opacity: .6;
    color: #000; /* 改为黑色 */
    text-align: center;
    margin-top: 100px;
}

.date {
    font-size: 14px;
    opacity: 0.8;
}

/* 文章内容样式 - 全部改为黑色 */
#post-content {
    color: #000; /* 主要文字改为黑色 */
}

#post-content article {
    color: #000;
    line-height: 1.7;
}

#post-content article h1 {
    color: #000;
    font-size: 2.2em;
    margin-bottom: 10px;
    border-bottom: 2px solid #000;
    padding-bottom: 10px;
}

#post-content article h2 {
    color: #000;
    font-size: 1.8em;
    margin: 25px 0 15px 0;
}

#post-content article h3 {
    color: #000;
    font-size: 1.5em;
    margin: 20px 0 12px 0;
}

#post-content article h4 {
    color: #000;
    font-size: 1.3em;
    margin: 18px 0 10px 0;
}

#post-content article p {
    color: #000;
    margin-bottom: 1.2em;
    font-size: 16px;
}

#post-content article .date {
    color: #666; /* 日期用深灰色 */
    font-size: 0.9em;
    margin-bottom: 20px;
}

#post-content article .article-content {
    color: #000;
}

#post-content article .article-content p {
    color: #000;
}

#post-content article .article-content li {
    color: #000;
    margin-bottom: 5px;
}

#post-content article .article-content ul,
#post-content article .article-content ol {
    color: #000;
    margin: 15px 0;
    padding-left: 25px;
}

#post-content article .article-content blockquote {
    color: #333;
    border-left: 4px solid #000;
    padding: 10px 15px;
    margin: 20px 0;
    background: rgba(0, 0, 0, 0.05);
    font-style: italic;
}

#post-content article .article-content code {
    color: #000;
    background: rgba(0, 0, 0, 0.1);
    padding: 2px 6px;
    border-radius: 3px;
    font-family: 'Courier New', monospace;
}

#post-content article .article-content pre {
    background: rgba(0, 0, 0, 0.1);
    padding: 15px;
    border-radius: 5px;
    overflow-x: auto;
    margin: 15px 0;
}

#post-content article .article-content pre code {
    background: none;
    padding: 0;
    color: #000;
}

#post-content article .article-content table {
    color: #000;
    border-collapse: collapse;
    width: 100%;
    margin: 15px 0;
}

#post-content article .article-content th,
#post-content article .article-content td {
    border: 1px solid #000;
    padding: 8px 12px;
    text-align: left;
}

#post-content article .article-content th {
    background: rgba(0, 0, 0, 0.1);
    font-weight: bold;
}

#post-content article .article-content a {
    color: #000;
    text-decoration: underline;
    text-decoration-color: #666;
}

#post-content article .article-content a:hover {
    color: #333;
    text-decoration-color: #000;
}
